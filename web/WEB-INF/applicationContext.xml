       http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
       http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.5.xsd">

    <context:annotation-config />
    <context:component-scan base-package="blog" />    
    
    <bean class="blog.connection.DriverManagerConnection" />
    <bean class="blog.dao.UsuariosDao" />
    <bean class="blog.dao.BlogsDao" />
    <bean class="blog.dao.EntradasDao" />
    <bean class="blog.dao.TagsDao" />
    <bean class="blog.data.MysqlData" />
   
</beans>
